@model DataObjects.models.Ticket 

@{
    ViewBag.Title = "Support Ticket";
}

<main class="d-flex" style="overflow-x: hidden;">
    @Html.Partial("_Navigation")
    <div class="m-5 bg-mainbackground border rounded-3" style="width: 100%; height: 85vh;">
        <div class="row justify-content-center w-100 h-100">
            <div class="col-md-12 d-flex justify-content-around mt-5" style="height: 80%;">
                <div class="card bg-lightishgray mt-5" style="width: 50%; height: 75%;">
                    <div class="card-header text-white bg-dimmergray d-flex justify-content-between align-items-center">
                        <h3 class="card-title text-center w-100">Create New Ticket</h3>
                    </div>
                    <div class="card-body text-center d-flex justify-content-center">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <form action="@Url.Action("CreateTicket", "Main")" method="post" class="w-75 mx-auto">
                            <div class="mb-3">
                                <label for="Title" class="form-label text-center">Title @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })</label>
                                @Html.TextBoxFor(m => m.Title, new { @class = "form-control mx-auto", placeholder = "Enter title", id = "Title" })
                            </div>
                            <div class="mb-3 text-center">
                                <label for="Priority" class="form-label">Priority @Html.ValidationMessage("Priority", "", new { @class = "text-danger" })</label>
                                @Html.DropDownList("Priority", new SelectList(new[]
                                {
                                    new SelectListItem { Text = "Low", Value = "1" },
                                    new SelectListItem { Text = "Urgent", Value = "2" },
                                    new SelectListItem { Text = "Critical", Value = "3" }
                                }, "Value", "Text"), "Ticket Priority", new { @class = "form-select mx-auto", id = "Priority" })
                            </div>
                            <div class="mb-3 text-center">
                                <label for="Issue" class="form-label">Issue @Html.ValidationMessageFor(m => m.Issue, "", new { @class = "text-danger" }) </label>
                                @Html.TextAreaFor(m => m.Issue, new { @class = "form-control mx-auto", placeholder = "Hello, I need help!", id = "Issue" })
                            </div>
                            <button type="submit" class="btn btn-outline-cyan d-block mx-auto">Submit</button>
                            <a href="@Url.Action("Tickets", "Main")" class="btn btn-outline-cyan mt-3 d-block mx-auto w-25">Cancel</a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
