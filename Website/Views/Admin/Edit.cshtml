@model DataObjects.models.User

@{
    ViewBag.Title = "Update Profile";
}

<div class="container-xl px-4 mt-4">
    <div class="row pt-5">
        <div class="col-xl-4">
            <div class="card bg-lightishgray mb-4 mb-xl-0">
                <div class="card-header bg-dimmergray text-center">@Model.Username's Profile Photo</div>
                <div class="card-body text-center">
                    <img class="img-account-profile rounded-circle mb-2" src="~/Images/bigpfp.jpg" alt="">
                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <div class="card mb-4 bg-lightishgray text-center">
                <div class="card-header bg-dimmergray">Account Details</div>
                <div class="card-body">
                    @using (Html.BeginForm("Edit", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group fs-4 fw-bold">
                            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label" }) |
                            @Html.DisplayFor(model => model.Username, new { @class = "form-control fw-bold" })
                            @Html.HiddenFor(model => model.Username)
                        </div>

                        <div class="card-body d-flex flex-column align-items-center">
                            <div class="form-group text-center">
                                @Html.LabelFor(model => model.Expiration, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Expiration, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Expiration, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group pt-3 mt-2">
                                <p class="mb-1">Level 1-4 OR 10 (Admin)</p>
                                @Html.EditorFor(model => model.LevelInfo.Level, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LevelInfo.Level, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group text-center mt-3">
                                <div class="form-check form-switch d-flex align-items-center">
                                    @Html.CheckBoxFor(model => model.Enabled, new { @class = "form-check-input mb-1", id = "cbEnabled" })
                                    <label class="form-check-label fs-5 fw-bold mx-2" for="cbEnabled">Enabled</label>
                                </div>
                                @Html.ValidationMessageFor(model => model.Enabled, "", new { @class = "text-danger" })
                            </div>


                            <div class="form-group mt-5">
                                <button type="submit" class="btn btn-outline-cyan btn-block">Save changes</button>
                            </div>
                        </div>

                    }
                </div>
             </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-cyan" })
</div>
